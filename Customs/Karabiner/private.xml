I<?xml version="1.0"?>
<root>
    <item>
      <name>Use PC Style Control+Left/Right</name>
      <appendix>(Change Control+Arrow to Option+Arrow)</appendix>
      <appendix></appendix>
      <appendix>{{ PC_STYLE_BINDINGS_IGNORE_APPS_DESCRIPTION }}</appendix>
      <identifier>remap.pclikecontrolleftright_except_vm</identifier>
      <not>{{ PC_STYLE_BINDINGS_IGNORE_APPS }}</not>
      {{ PC_STYLE_BINDINGS_IGNORE_EXTRA }}
      <autogen>__KeyToKey__ KeyCode::CURSOR_LEFT,   MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_CONTROL, KeyCode::CURSOR_LEFT,  ModifierFlag::OPTION_L</autogen>
      <autogen>__KeyToKey__ KeyCode::CURSOR_RIGHT,  MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_CONTROL, KeyCode::CURSOR_RIGHT, ModifierFlag::OPTION_L</autogen>
    </item>

    <item>
      <name>Use PC Style Ctrl+Delete</name>
      <appendix>(Change Ctrl+Delete to Option+Delete)</appendix>
      <appendix></appendix>
      <appendix>{{ PC_STYLE_BINDINGS_IGNORE_APPS_DESCRIPTION }}</appendix>
      <identifier>remap.pclikeshiftdelte_except_vm</identifier>
      <not>{{ PC_STYLE_BINDINGS_IGNORE_APPS }}</not>
      {{ PC_STYLE_BINDINGS_IGNORE_EXTRA }}
      <autogen>__KeyToKey__ KeyCode::DELETE,   MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_CONTROL, KeyCode::DELETE,  ModifierFlag::OPTION_L</autogen>
    </item>


<item>
    <name>Tap shift to move over words</name>
    <appendix>Shift keys move the cursor one word forward or backward when pressed alone. When used with other keys they act as normal shifts.</appendix>
      <appendix></appendix>
      <appendix>(Except in Emacs.)</appendix>
    <identifier>private.shifts_to_forward_backward_word</identifier>
    <not>EMACS</not>
    <autogen>--KeyOverlaidModifier-- KeyCode::SHIFT_R, ModifierFlag::SHIFT_R | ModifierFlag::NONE, KeyCode::SHIFT_R, KeyCode::CURSOR_RIGHT, ModifierFlag::OPTION_L</autogen>
    <autogen>--KeyOverlaidModifier-- KeyCode::SHIFT_L, ModifierFlag::SHIFT_L | ModifierFlag::NONE, KeyCode::SHIFT_L, KeyCode::CURSOR_LEFT, ModifierFlag::OPTION_L</autogen>
</item>

<item>
    <name>Map F12 to Developer Tools in Chrome</name>
    <appendix>(Change F12 to Command+Option+I</appendix>
      <appendix></appendix>
      <appendix>{{ PC_STYLE_BINDINGS_IGNORE_APPS_DESCRIPTION }}</appendix>
    <identifier>private.open_dev_tools_with_f12</identifier>
      <not>{{ PC_STYLE_BINDINGS_IGNORE_APPS }}</not>
      {{ PC_STYLE_BINDINGS_IGNORE_EXTRA }}
      <autogen>__KeyToKey__ KeyCode::F12, ModifierFlag::NONE, KeyCode::I, MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_COMMAND | MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_OPTION </autogen>

</item>

<item>
    <name>Map F5 to refresh in Chrome</name>
    <appendix>(Change F5 to Command+R</appendix>
      <appendix></appendix>
      <appendix>{{ PC_STYLE_BINDINGS_IGNORE_APPS_DESCRIPTION }}</appendix>
    <identifier>private.refresh_with_f5</identifier>
      <not>{{ PC_STYLE_BINDINGS_IGNORE_APPS }}</not>
      {{ PC_STYLE_BINDINGS_IGNORE_EXTRA }}
      <autogen>__KeyToKey__ KeyCode::F5, ModifierFlag::NONE, KeyCode::R, MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_COMMAND </autogen>

</item>


</root>
